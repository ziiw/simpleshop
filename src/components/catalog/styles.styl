.catalog
  background grey
  display flex
  flex-wrap wrap

.item
  flex 0 1 25%
  background red
  border 1px solid black
  box-sizing border-box
  padding 10px
  
  @media (min-width: 1400px)
    flex 0 1 20%

  @media (max-width: 800px)
    flex 0 1 33.33%

  @media (max-width: 650px)
    flex 0 1 50%

  @media (max-width: 450px)
    flex 0 1 100%